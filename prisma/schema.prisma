generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  animeList AnimeList[]
  mangaList MangaList[]
}

model AnimeList {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  animeId   String   // ID from AnimeDB
  title     String
  status    Status   // Enum: watching, completed, etc.
  createdAt DateTime @default(now())
}

model MangaList {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  mangaId   String   // ID from AnimeDB
  title     String
  status    Status
  createdAt DateTime @default(now())
}

enum Status {
  WATCHING
  COMPLETED
  WANT_TO_WATCH
  READING
  WANT_TO_READ
}